<h1 class="is-size-3 has-text-centered profile-title">
  Orders List
</h1>

<div>
  {{#if orders.length}}
  <section class="accordions">
    {{#each orders}}
    <article class="accordion">
      <div class="accordion-header toggle has-background-white-ter has-text-dark orders-accordion">
        <span class="order-total-price">
          <span class="order-total-price-text">Total Charge:</span>
          <span class="order-total-price-val">{{stripeDollarAmount totalPrice}}</span>
        </span>
        <span class="order-date">
          <span class="order-date-text">Ordered at:</span>
          <span class="order-date-val">{{orderDate}}</span>
        </span>
      </div>
      <div class="accordion-body">
        <div class="accordion-content">

          <div class="order-info-wrapper is-clearfix">
            <span class="order-token">
              <span class="order-token-text">Payment ID:</span>
              <span class="order-token-val">{{token}}</span>
            </span>
            <a href="{{receiptUrl}}" target="_blank" class="button is-pulled-right">View Receipt</a>
          </div>

          <div class="order-single">
            <table class="table is-responsive is-bordered is-hoverable is-fullwidth container">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Price</th>
                  <th>Quantity</th>
                  <th>Combined Price</th>
                </tr>
              </thead>
              <tbody>
                {{#each items}}
                <tr>
                  <td>{{title}}</td>
                  <td>${{round price}}</td>
                  <td>{{quantity}}</td>
                  <td>${{round combined}}</td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </article>
    {{/each}}
  </section>
  {{else}}

  <h1 class="is-size-4 has-text-centered has-text-danger" style="padding: 1rem;">No Orders</h1>
  {{/if}}
</div>


{{#contentFor 'scripts'}}
<script src="/js/profile.js"></script>
{{/contentFor}}