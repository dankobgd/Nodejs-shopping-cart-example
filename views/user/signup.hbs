<section class="hero">
  <div class="hero-body">
    <div class="columns is-centered has-text-centered">
      <div class="column is-one-third-widescreen is-half-desktop is-three-quarters-tablet is-full-mobile">
        <h3 class="title has-text-grey">Sign up</h3>
        <p class="subtitle has-text-grey">Create new account</p>
        <div class="box">
          <form>
            <div class="field">
              <div class="control">
                <label for="email">Email</label>
                <input name="email" class="input is-medium" type="email" placeholder="Your Email" autofocus="">
              </div>
            </div>
            <div class="field">
              <div class="control">
                <label for="password">Password</label>
                <input name="password" class="input is-medium" type="password" placeholder="Your Password">
              </div>
            </div>
            <div class="field">
              <div class="control">
                <label for="confirmPassword">Confirm Password</label>
                <input name="confirmPassword" class="input is-medium" type="password" placeholder="Retype Password">
              </div>
            </div>
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button class="button is-block is-info is-medium is-fullwidth">Sign up</button>
          </form>
        </div>

        <span style="margin-right: 6px;">Already have an account?</span><a href="/signin">Log In</a>
      </div>
    </div>
  </div>
</section>