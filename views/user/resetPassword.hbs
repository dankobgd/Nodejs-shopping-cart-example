<div class="columns is-centered">
  <div class="column is-one-third-widescreen is-half-desktop is-three-quarters-tablet is-full-mobile">
    <div class="hero">
      <div class="hero-body">
        <form action="/reset/{{token}}" method="POST">
          {{> validationErrors}}
          {{> success}}
          {{> accountError}}

          <div class="field">
            <div class="control">
              <label for="password">New Password</label>
              <input name="password" class="input is-medium" type="password" placeholder="New Password" autofocus
                required>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <label for="confirmPassword">Retype New Password</label>
              <input name="confirmPassword" class="input is-medium" type="password" placeholder="Retype New Password"
                required>
            </div>
          </div>
          <input type="hidden" name="_csrf" value="{{csrfToken}}">
          <button class="button is-block is-info is-medium is-fullwidth">Change Password</button>
        </form>
      </div>
    </div>
  </div>
</div>